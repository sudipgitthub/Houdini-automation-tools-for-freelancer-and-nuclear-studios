        submit_machine = job.get("JobSubmitMachine", "")

        try:
            completed = int(job.get("JobCompletedTasks", 0))
            total = int(job.get("JobTaskCount", 1))
            progress = int((completed / total) * 100) if total > 0 else 0
        except:
            progress = 0

        columns = [
